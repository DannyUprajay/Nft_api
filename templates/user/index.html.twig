{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>UserName</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Birth</th>
                <th>City</th>
                <th>NumberAddress</th>
                <th>NameAddress</th>
                <th>ComplementAddress</th>
                <th>PostalCode</th>
                <th>PathImage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birth ? user.birth|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.numberAddress }}</td>
                <td>{{ user.nameAddress }}</td>
                <td>{{ user.complementAddress }}</td>
                <td>{{ user.postalCode }}</td>
                <td>{{ user.pathImage }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
